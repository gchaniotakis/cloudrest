@model IEnumerable<cloudrest.Models.Lesson>

@{
    ViewBag.Title = "Index";
    
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", null , new { @class = "btn - btn primary"})
</p>



<table class=" table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.LessonTitle)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LessonTitle)
            </td>
            <td>
                @Html.ActionLink("Edit","Edit", new { id = item.LessonId}, new { @class="btn btn-success"})
                @Html.ActionLink("Delete", "Delete", new { id = item.LessonId}, new { onclick = $"return confirm", @class = "btn btn-danger"})
            </td>
        </tr>
    }
</table>

