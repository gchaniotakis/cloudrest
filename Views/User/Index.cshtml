@model IEnumerable<cloudrest.Models.User>

@{ 
    ViewBag.Title = "Index";
}

<h2>User</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary"})
</p>

<div class="container">
    <div class="row">
        @using(Html.BeginForm("Index", "User",FormMethod.Get))
        {
        <p>
            @Html.TextBox("Searching...")
            <button class="btn-info" type="submit">Search</button>
        </p>

        }
    </div>
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserRole)
        </th>
    </tr>

    @foreach  (var item in Model){
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserRole)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.UserId}, new {@class = "btn btn-success" })
                @Html.ActionLink("Details", "Details", new { id = item.UserId}, new { @class = "btn btn-warning"})
                @Html.ActionLink("Delete", "Delete", new { id = item.UserId}, new {onclick = $"return confirm('{item.UserName} will be permanently deleted. Are you sure?');",@class = "btn btn-danger" })
            </td>
        </tr>
    }
</table>